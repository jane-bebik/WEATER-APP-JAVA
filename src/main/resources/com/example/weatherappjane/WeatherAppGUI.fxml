<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.weatherappjane.WeatherAppController"
          hgap="10" vgap="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Enter City:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="cityInput" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Button text="Get Weather" onAction="#fetchWeatherData" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label fx:id="resultLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label fx:id="last10EntriesLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
